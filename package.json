{
    "name": "sui-token-boilerplate",
    "version": "0.0.1",
    "private": true,
    "workspaces": [
        "packages/contracts",
        "packages/client"
    ],
    "scripts": {
        "start:sui": "bash build_scripts/start_sui.sh",
        "fund": "bash build_scripts/fund_address.sh",
        "start:local": "mprocs --config mprocs.yaml",
        "prepare": "husky install",
        "fmt": "sui move format",
        "lint": "echo 'Use move-analyzer in IDE'",
        "client:dev": "yarn workspace client dev",
        "client:build": "yarn workspace client build"
    },
        "dependencies": {
            "react": "^18.3.1",
            "react-dom": "^18.3.1",
            "react-router-dom": "^6.25.0",
            "clsx": "^2.1.1",
            "dayjs": "^1.11.13",
            "tw-animate-css": "^1.3.3",
            "zod": "^3.24.3"
        },
        "devDependencies": {
            "husky": "^9.0.0",
            "@types/react": "^18.3.1",
            "@types/react-dom": "^18.2.7",
            "@types/node": "^22.13.1",
            "typescript": "^5.5.3",
            "vite": "^6.3.4",
            "@vitejs/plugin-react-swc": "^3.9.0"
        },
    "lint-staged": {
        "/packages/contracts/sources/**/*.move": [
            "sui move format --install",
            "git add"
        ]
    }
}
